@model rent_a_car_mvc.Models.Car
@{
}

<h2>Edit Car</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Make"></label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegistrationPlate"></label>
        <input asp-for="RegistrationPlate" class="form-control" />
        <span asp-validation-for="RegistrationPlate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Edit</button>
</form>
