@model rent_a_car_mvc.Models.Customer
@{
}

<div class="container">
    <h1>Details</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Customer</h5>

            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Date Of Birth:</dt>
                        <dd class="col-sm-8">@Model.DateOfBirth.ToShortDateString()</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Telephone:</dt>
                        <dd class="col-sm-8">@Model.Telephone</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <a asp-action="Index" class="btn btn-secondary mt-3">Back to Customer List</a>
</div>
